<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0;netstandard1.3</TargetFrameworks>

    <Version>0.3.0</Version>
    <Title>NLog.Layouts.GelfLayout</Title>
    <PackageId>NLog.GelfLayout</PackageId>
    <Company>Farzad Panahi</Company>
    <Authors>Farzad Panahi</Authors>
    <Description>Gelf layout renderer for NLog</Description>
    <Copyright>Copyright 2015</Copyright>

    <PackageReleaseNotes>
      Added NetCore support
    </PackageReleaseNotes>
    <PackageTags>NLog;Gelf;graylog2;Log;Logging</PackageTags>
    <PackageProjectUrl>https://github.com/farzadpanahi/NLog.GelfLayout</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.github.com/farzadpanahi/NLog.GelfLayout/master/LICENSE</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>git://github.com/farzadpanahi/NLog.GelfLayout</RepositoryUrl>

    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>NLog.Layouts.GelfLayout.snk</AssemblyOriginatorKeyFile>
    <PublicSign Condition=" '$(OS)' != 'Windows_NT' ">true</PublicSign>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <PackageReference Include="NLog" Version="4.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="6.0.8" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' != 'net45' ">
    <PackageReference Include="NLog" Version="4.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>
</Project>